{
  "name": "bg-webmacos-calculator",
  "version": "1.0.0",
  "description": "A full-featured scientific calculator app for BG-WebMacOS",
  "main": "src/Calculator.vue",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "install-app": "node scripts/install.js",
    "uninstall-app": "node scripts/uninstall.js",
    "package": "npm run build && npm run create-package",
    "create-package": "node scripts/create-package.js"
  },
  "keywords": [
    "calculator",
    "math",
    "scientific",
    "utility",
    "bg-webmacos",
    "vue3",
    "typescript"
  ],
  "author": {
    "name": "Third Party Developer",
    "email": "developer@example.com",
    "url": "https://example.com"
  },
  "license": "MIT",
  "homepage": "https://example.com/calculator",
  "repository": {
    "type": "git",
    "url": "https://github.com/example/bg-webmacos-calculator.git"
  },
  "bugs": {
    "url": "https://github.com/example/bg-webmacos-calculator/issues"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "dependencies": {
    "vue": "^3.3.8"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.2",
    "eslint": "^8.54.0",
    "eslint-plugin-vue": "^9.18.1",
    "jsdom": "^23.0.1",
    "prettier": "^3.1.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vitest": "^0.34.6"
  },
  "bgWebMacOS": {
    "version": "1.0.0",
    "apiVersion": "1.0.0",
    "category": "utilities",
    "permissions": [
      "storage",
      "clipboard"
    ],
    "window": {
      "width": 320,
      "height": 480,
      "minWidth": 280,
      "minHeight": 400,
      "maxWidth": 400,
      "maxHeight": 600,
      "resizable": true
    },
    "features": {
      "scientific": true,
      "history": true,
      "memory": true,
      "keyboard": true,
      "themes": false
    },
    "lifecycle": {
      "install": "scripts/install.js",
      "uninstall": "scripts/uninstall.js",
      "postInstall": "scripts/post-install.js"
    }
  },
  "files": [
    "src/**/*",
    "assets/**/*",
    "scripts/**/*",
    "app.manifest.json",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "registry": "https://registry.bg-webmacos.com",
    "access": "public"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/example"
  },
  "config": {
    "build": {
      "target": "es2020",
      "outDir": "dist",
      "sourcemap": true
    },
    "test": {
      "environment": "jsdom",
      "coverage": {
        "reporter": ["text", "json", "html"]
      }
    }
  }
}