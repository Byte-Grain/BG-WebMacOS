{
  "name": "Calculator",
  "displayName": "计算器",
  "version": "1.0.0",
  "description": "一个功能完整的科学计算器应用",
  "author": "Third Party Developer",
  "homepage": "https://example.com/calculator",
  "repository": "https://github.com/example/calculator",
  "license": "MIT",
  "category": "utilities",
  "tags": ["calculator", "math", "utility"],
  "icon": "./assets/icon.svg",
  "screenshots": [
    "./assets/screenshot1.png",
    "./assets/screenshot2.png"
  ],
  "main": "./src/Calculator.vue",
  "files": [
    "src/**/*",
    "assets/**/*",
    "package.json",
    "README.md"
  ],
  "window": {
    "width": 320,
    "height": 480,
    "minWidth": 280,
    "minHeight": 400,
    "maxWidth": 400,
    "maxHeight": 600,
    "resizable": true,
    "titleBarStyle": "default",
    "backgroundColor": "#f5f5f5"
  },
  "permissions": [
    "storage",
    "clipboard"
  ],
  "dependencies": {
    "vue": "^3.0.0"
  },
  "engines": {
    "bg-webmacos": ">=1.0.0",
    "node": ">=16.0.0"
  },
  "scripts": {
    "install": "node scripts/install.js",
    "uninstall": "node scripts/uninstall.js",
    "postInstall": "node scripts/post-install.js"
  },
  "config": {
    "theme": {
      "primary": "#007aff",
      "secondary": "#5ac8fa",
      "background": "#f5f5f5",
      "text": "#333333"
    },
    "features": {
      "scientific": true,
      "history": true,
      "memory": true
    }
  },
  "sandbox": {
    "network": false,
    "filesystem": false,
    "system": false
  },
  "shortcuts": [
    {
      "key": "Ctrl+C",
      "action": "copy",
      "description": "复制结果"
    },
    {
      "key": "Escape",
      "action": "clear",
      "description": "清除输入"
    }
  ],
  "menu": [
    {
      "label": "编辑",
      "submenu": [
        {
          "label": "复制",
          "accelerator": "Ctrl+C",
          "action": "copy"
        },
        {
          "label": "粘贴",
          "accelerator": "Ctrl+V",
          "action": "paste"
        },
        { "type": "separator" },
        {
          "label": "清除历史",
          "action": "clearHistory"
        }
      ]
    },
    {
      "label": "视图",
      "submenu": [
        {
          "label": "标准模式",
          "type": "radio",
          "action": "setMode",
          "value": "standard"
        },
        {
          "label": "科学模式",
          "type": "radio",
          "action": "setMode",
          "value": "scientific"
        }
      ]
    }
  ],
  "notifications": {
    "enabled": true,
    "types": ["calculation", "error"]
  },
  "updateInfo": {
    "checkUrl": "https://api.example.com/calculator/updates",
    "downloadUrl": "https://releases.example.com/calculator",
    "autoUpdate": false
  },
  "buildInfo": {
    "buildTime": "2024-01-15T10:30:00Z",
    "buildNumber": "1001",
    "gitCommit": "abc123def456"
  }
}